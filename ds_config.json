{
    "train_micro_batch_size_per_gpu": 4,
    "gradient_accumulation_steps": 2,
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 5e-5,
        "betas": [0.9, 0.999],
        "eps": 1e-8,
        "weight_decay": 0.01
      }
    },
    "fp16": {
      "enabled": true,
      "loss_scale": 0,
      "loss_scale_window": 1000,
      "hysteresis": 2,
      "min_loss_scale": 1
    },
    "zero_optimization": {
      "stage": 2,
      "offload_optimizer": {
        "device": "cpu",
        "pin_memory": true
      },
      "contiguous_gradients": true,
      "overlap_comm": true,
      "reduce_bucket_size": 5e8,
      "stage3_max_live_parameters": 1e9
    },
    "gradient_clipping": 1.0,
    "steps_per_print": 500
  }